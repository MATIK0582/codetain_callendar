<section id="login" class="container">
        <div class="form-wrap">
            <h1>Zaloguj się</h1>
            {{#each errors}}
                <div class="error">
                    <p>{{text}}</p>
                </div>
            {{/each}}
            <form action="/login" method="POST">

                <div class="input-group">
                    <label for="login">Login</label>
                    <input type="text" name="login" id="login" class="input-box" placeholder="eg. user"
                    maxlength="50" value={{login}}>
                </div>

                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="input-box" maxlength="50" value={{password}}>
                </div>

                <input type="submit" value="Zaloguj się" class="btn btn-reverse">
            </form>
        </div>
</section>